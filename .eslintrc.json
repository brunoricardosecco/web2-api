{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "max-len": [
      "error",
      {
        "code": 200
      }
    ],
    "class-methods-use-this": "off",
    "no-param-reassign": "off",
    "arrow-body-style": "off",
    "func-names": "off",
    "camelcase": "off"
  }
}
